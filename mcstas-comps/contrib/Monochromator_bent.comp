				points[6][0], points[6][1], points[6][2]);
			line(points[3][0], points[3][1], points[3][2],
				points[7][0], points[7][1], points[7][2]);	
		}
		// Draw a final box in the xy plane
		multiline(5, 
			points[4][0],points[4][1],points[4][2],
			points[6][0],points[6][1],points[6][2],
			points[7][0],points[7][1],points[7][2],
			points[5][0],points[5][1],points[5][2],
			points[4][0],points[4][1],points[4][2]);

	}

