	double random_normal_distribution(double* sigma, _class_particle* _particle){
		double u1, u2;
		u1 = rand01();
		u2 = rand01();
		double r = sqrt(-2 * log(u1));
		double theta = 2 * M_PI * u2;
		return *sigma * r * cos(theta);
	}

